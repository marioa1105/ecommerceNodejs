{{#if noExiste }} 
    <h3 class="alert alert-warning">No se encontraron datos del producto</h3>
{{/if}}

<div class="row">
    <div class="col-lg-12">
        <input id="nombre"  type="text" name="nombre" value="{{producto.nombre}}" disabled = "disabled">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <input id=""  type="text" name="descripcion" value="{{producto.descripcion}}" disabled = "disabled">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <input id=""  type="text" name="precio" value="{{producto.precio}}" disabled = "disabled">
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <img class="card-img-top" src={{producto.foto}} alt="not found" width="100" height="100">
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <input id=""  type="text" name="stock" value="{{producto.stock}}" disabled = "disabled">
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <a href="/productos/listado">Volver</a>
    </div>
</div>
