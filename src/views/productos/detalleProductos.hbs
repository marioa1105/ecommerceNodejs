<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>

    {{#if hayProductos}} 
        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <th>Id</th>  
                    <th>Nombre</th>
                    <th>Descripcion</th> 
                    <th>Precio</th> 
                    <th>Stock</th> 
                    <th>Foto</th>
                </tr>
                {{#each productos}}
                    <tr>
                        <td>{{this.id}}</td>  
                        <td>{{this.nombre}}</td> 
                        <td>{{this.descripcion}}</td> 
                        <td>$ {{this.precio}}</td> 
                        <td{{this.stock}}</td> 
                        <td><img width="50" src={{this.thumbnail}} alt="not found"></td> 
                    </tr>
                {{/each}}
            </table>
        </div>
    {{else}}  
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
</div>